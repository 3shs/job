.mj-post {
  width: 1200px;
  height: 847px;
  background-color: #fff;
  border-radius: 10px;
  margin: 0 auto;
  overflow: hidden;
  padding: 0 93px 0 93px;
}
.mj-post-title {
  width: 100%;
  height: 71px;
  line-height: 71px;
  border-bottom: 1px solid #dbdbdb;
  font-size: 16px;
  color: #000;
  .tips {
    font-size: 14px;
    position: relative;
  }
  .mi {
    font-size: 20px;
    color: #f56c6c;
    position: absolute;
    top: 0;
    line-height: 23px;
  }
}
.post-content {
  height: 562px;
  margin-top: 33px;
  font-size: 14px;
  color: #000;
  margin-left: 81px;
  .mt {
    margin-bottom: 18px;
  }
  .desc {
    position: relative;
    textarea {
      width: 841px;
      height: 275px;
      vertical-align: top;
      resize: none;
      font-size: 14px;
      color: #000;
      padding: 13px 0 0 17px;
      outline: none;
      border: 1px solid #d1d1d1;
      border-radius: 4px;
      &:focus {
        border-color: #2ed775;
      }
    }
    .residue {
      font-size: 14px;
      color: #999999;
      position: absolute;
      bottom: 8px;
      right: 38px;
      span {
        font-size: 14px;
        color: #ff0000;
      }
    }
    // .red {
    //   color: #ff0000;
    // }
  }
  .el-button {
    width: 189px;
    height: 42px;
    background-color: #2ed775;
    border-radius: 5px;
    border: none;
    margin-left: 68px;
    margin-top: 19px;
  }
  .job-type {
    .iconfont {
      position: absolute;
      right: -1px;
      bottom: -9px;
      font-size: 25px;
      display: none;
    }
  }
  .salary {
    .el-input {
      width: 351px;
    }
  }
  .position-type {
    margin-left: -16px;
    .el-input {
      width: 351px;
    }
  }
  .post-city {
    .el-select {
      width: 179px;
    }
    .el-form-item {
      width: 268px;
    }
    .el-input {
      width: 179px;
    }
  }
}
