* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
html,
body {
  width: 100%;
  height: 100%;
  background-color: #f4f6f8;
}
body {
  font-family: PingFang SC, Helvetica Neue, Helvetica, Arial, Hiragino Sans GB,
    Microsoft Yahei, \\5fae\8f6f\96c5\9ed1, STHeiti, \\534e\6587\7ec6\9ed1,
    sans-serif;
  color: #666;
  font-size: 14px;
}

a {
  font-style: normal;
  text-decoration: none;
  color: #fff;
  cursor: pointer;
  transition: all 0.15s ease-out;
  &:hover {
    color: #fff;
  }
}

li {
  list-style-type: none;
}

input,
img,
button {
  border: none;
  outline: none;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-size: 100%;
  font-weight: 400;
}

i,
em {
  font-style: normal;
}

input[type='number'],
textarea {
  -moz-appearance: textfield;
}

input[type='number']::-webkit-inner-spin-button,
input[type='number']::-webkit-outer-spin-button,
input[type='submit'],
input[type='search'],
input[type='reset'] {
  -webkit-appearance: none;
}
::-webkit-input-placeholder {
  /* WebKit browsers */
  color: #bebebe;
}
:-moz-placeholder {
  /* Mozilla Firefox 4 to 18 */
  color: #bebebe;
}
::-moz-placeholder {
  /* Mozilla Firefox 19+ */
  color: #bebebe;
}
:-ms-input-placeholder {
  /* Internet Explorer 10+ */
  color: #bebebe;
}
.fl {
  float: left;
}
.fr {
  float: right;
}
/* 清除浮动公共类 */
.clearfix:after {
  content: '.';
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.clearfix {
  *zoom: 1;
}
.mr {
  margin-right: 30px;
}
.shadow {
  box-shadow: 0 0 7px 4px #ebecee;
}
.w1400 {
  width: 1400px;
  margin: 0 auto;
}
// 单行溢出以省略号形式展示
.one-txt-cut {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
